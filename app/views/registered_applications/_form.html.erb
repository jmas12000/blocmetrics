<%= form_for [current_user,@registered_application] do |f| %>
  <div class= "container-fluid text-input">
    <div class="form-group">
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field :name, class: 'form-control text', placeholder: "Enter the websites name" %>
    </div>
     <div class="form-group">
      <%= f.label :URL, class: 'sr-only' %>
      <%= f.text_field :URL, class: 'form-control text', placeholder: "Enter the websites address" %>
    </div>
    <p class= "text-warning submit"><%= f.submit "Submit item", class: 'btn btn-success pull-right text-warning' %>
  </div>
<% end %>